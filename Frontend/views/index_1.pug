                                option(value="1") InProgress
                                option(value="2") Maintain
                                option(value="3") Pending
                                option(value="4") Complete
                            </select>
                    </div> 

                    <br>
                    .btns
                        <div class="button btn-change-save">Save</div>
                        <div class="button btn-change-close">Close</div>
                </div>
            </div>
        </div>
